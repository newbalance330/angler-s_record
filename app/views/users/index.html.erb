 <h1 class="index-title">Users 一覧</h1>
 <div class="container">
    <div class="row">
       <% @users.reverse.each do |user| %>
        <div class="col-lg-3 col-md-4 thumb">
          <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 300, 300, format: 'jpeg', fallback: "no_image.jpg", size:"200x200", class: "fluid img-thumbnail rounded-circle" %><br>
            <i class="fas fa-user-circle"></i><%= user.name %>
          <% end %>
        </div>
      <% end %>
    </div>
 </div>