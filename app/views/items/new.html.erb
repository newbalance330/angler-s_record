<h1>Items#new</h1>

 <%= form_with model: @item, url: items_path, local:true do |f| %>
 </div>
   <table class="admin_items">
      <tr>
        <th>アイテム画像</th>
        <td><%= f.attachment_field :item_image %></td>
      </tr>
      <tr>
        <th>アイテム名</th>
        <td><%= f.text_field :name %></td>
      </tr>


      <th>保有ステータス</th>
        <td class="col-md-3">
          <%= f.select :status, [['所有', 1], ['ロスト...', 2], ['欲しい!!', 3]], :selected => 1 %>
         <%= f.select :status, Item.statuses.map { |k,v| [I18n.t("enum.item.status.#{k}"), k]} %>

        </td>
        <th>本文</th>
        <td><%= f.text_area :body %></td>
      </tr>
   </table>
   <%= f.submit "新規登録" , class: 'btn btn-primary' %>
  <% end %>
