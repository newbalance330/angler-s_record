<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">アイテム投稿フォーム</h5>
      <div class="form-body p-4">
        <% if @item.errors.any? %>
          <%= @item.errors.count %>件のエラーが発生しました
          <% @item.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model: @item, url: items_path, local:true do |f| %>
         <label class="input-label">アイテム画像</label>
          <%= f.attachment_field :item_image, class: "w-100" %>

          <label class="input-label">ルアー名</label>
          <%= f.text_area :name, class:"form-control", placeholder:"釣具などもOK！" %>
          <label class="input-label">コメント記入欄</label>
          <%= f.text_area :body, class:"form-control", rows:"4", placeholder:"コメント記入欄" %>
          <label class="input-label">所有ステータス</label><br>
          <%= f.select :status, Item.statuses.map { |k,v| [I18n.t("enum.item.status.#{k}"), k]} %>
          <hr>
          <%= f.submit '新規投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>