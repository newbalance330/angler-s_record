<div class="post-detail py-5 bg-light">
  <div class="card w-75 mx-auto mt-4 shadow-lg">
    <%= attachment_image_tag @item, :item_image, class:"card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(@user.id) do %>
           <%= attachment_image_tag @item.user, :profile_image, :fill, 60, 60,format: 'jpeg', fallback: "no_image.jpg", size:'100x100', class:"mt-3 rounded-circle"; %>
          <% end %>
        </div>
        <div class="col-9">
          <p class="card-title">
          <strong><i class="fas fa-tools"></i>：<span> <%= @item.name %></span></strong>
          </p>
          <p class="card-title "><i class="fas fa-comment-dots"></i>：<%= @item.body %></p>
          <i class="fas fa-shopping-cart"></i>：<%= I18n.t("enum.item.status.#{@item.status}")%></p>
          <span><i class="fas fa-user-circle"></i> by <%= @item.user.name %> ｜ </span>
          <span><i class="fa fa-calendar"></i> <%= @item.created_at.strftime('%Y/%m/%d') %></span><br>
          <% if @item.user == current_user %>
            <%= link_to edit_item_path(@item.id) do %>
              <button type="button" class="btn btn-warning"> 編集する </button>
            <% end %>
            <%= link_to item_path(@item.id), method: :delete, "data-confirm"  => "本当に削除しますか？"  do %>
              <button type="button" class="btn btn-danger"> 削除する </button>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
