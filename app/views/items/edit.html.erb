<h1>アイテム  編集画面</h1>
<h3>変更前の画像</h3>
<%= attachment_image_tag @item, :item_image, :fill, 200, 200, format: "jpeg" %>
<%= form_with model: @item, url: item_path(@item.id), local: true do |f| %>
      <table>
        <tr>
          <th>アイテム画像</th>
          <td><%= f.attachment_field :item_image %></td>
        </tr>

        <tr>
          <th>アイテム名</th>
          <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :body %></td>
        </tr>
       <th>保有ステータス</th>
        <td class="col-md-3">
          <%#= f.select :status, [['所有', 1], ['ロスト...', 2], ['欲しい!!', 3]], :selected => 1 %>
          <%= f.select :status, Item.statuses.map { |k,v| [I18n.t("enum.item.status.#{k}"), k]} %>
        </td>
      </table>
      <br>
      <%= f.submit "変更を保存", class: 'btn btn-primary' %>
    <% end %>