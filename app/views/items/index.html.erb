<h1 class="index-title">Items 一覧</h1>
<div class="container">
   <div class="row">
     <% @items.reverse.each do |item| %>
       <div class="col-lg-3 col-md-4 thumb">
         <%= link_to item_path(item) do %>
           <%= attachment_image_tag item, :item_image, :fill, 350, 300, format: 'jpeg', class: "fluid img-thumbnail" %>
         <% end %>
       </div>
     <% end %>
	 </div>
</div>