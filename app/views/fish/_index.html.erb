<h1 class="index-title">Fishes 一覧</h1>
<div class="container">
   <div class="row">
     <% fish.reverse.each do |fish| %>
       <div class="col-lg-3 col-md-4 thumb">
         <%= link_to fish_path(fish) do %>
            <%= attachment_image_tag fish, :image, :fill, 360, 300, format: 'jpeg', class: "fluid img-thumbnail" %>
         <% end %>
       </div>
     <% end %>
   </div>
</div>
