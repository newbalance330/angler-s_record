<% if user_signed_in? %>
<div class="container bg-dark">
    <div class="search_form">
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.text_field :word %>
        <%= f.select :range, options_for_select([['User'], ['Fish'], ['Item']]), {include_blank: true} %>
        <%= f.select :search, options_for_select([["部分一致","partial_match"],["完全一致","perfect_match"]]) %>
        <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
