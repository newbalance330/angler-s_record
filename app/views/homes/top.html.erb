<div class="main-visual">
   <div class="main-visual-content">
     <h3 class="main-title">Anglers Record</h3>
     <p class="main-visual-text">
        Welcome  to  this  page <br>
        This  is  a  site  to  record <br>
        memories  of  you  and  fish<br>
     </p>
   </div>
</div>
<div class="space"></div>
<div class="container">
   <h2><b>New Post</b></h2>
   <div class="d-flex flex-wrap">
     <% if user_signed_in? %>
       <% @fish.last(4).reverse.each do |fish| %>
         <div class="col-md-3">
           <div class="col-xs-2" style="padding-right: 0px; padding-left: 0px;">
             <%= link_to fish_path(fish) do %>
               <%= attachment_image_tag fish, :image, :fill, 210, 210, fallback:"img/no_image.jpg", size: "220x220"  %><br>
             <% end %>
           </div>
         </div>
       <% end %>
     <% else %>
       <% @fish.last(4).reverse.each do |fish| %>
         <div class="col-md-3">
           <div class="col-xs-2" style="padding-right: 0px; padding-left: 0px;">
             <%= attachment_image_tag fish, :image, :fill, 210, 210, fallback:"img/no_image.jpg", size: "220x220"  %><br>
           </div>
         </div>
       <% end %>
     <% end %>
   </div>
 </div>